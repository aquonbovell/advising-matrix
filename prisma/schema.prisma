// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator kysely {
  provider = "prisma-kysely"
  output   = "../src/lib/server/db"
  fileName = "schema.ts"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id             String    @id @unique
  email          String    @unique
  alternateEmail String    @unique
  name           String    @unique
  username       String    @unique
  passwordHash   String
  /// @kyselyType('STUDENT' | 'ADVISOR' | 'ADMIN')
  role           String
  onboarded      Boolean
  sessions       Session[]
}

model Session {
  id        String @id @unique
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  expiresAt BigInt

  @@index([userId])
}
